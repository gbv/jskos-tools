{
  "name": "jskos-tools",
  "version": "1.0.28",
  "description": "Tools for working with the JSKOS data format.",
  "homepage": "https://github.com/gbv/jskos-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/jskos-tools.git"
  },
  "bugs": {
    "url": "https://github.com/gbv/jskos-tools/issues"
  },
  "license": "MIT",
  "main": "./index.js",
  "jsdelivr": "./dist/jskos-tools.js",
  "unpkg": "./dist/jskos-tools.js",
  "browserslist": "defaults and not ie<=11 and supports es6",
  "files": [
    "dist",
    "lib",
    "bin",
    "index.js"
  ],
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "fix": "eslint --fix .",
    "lint-staged": "lint-staged",
    "dist": "rollup -c",
    "docs": "jsdoc --configure jsdoc.json && cp -r jsdoc/assets/* jsdoc/build/css",
    "build": "rollup -c",
    "release": "npm run build && npm test && git checkout dev && git pull && npm version $SEMVER && git push && git checkout master && git merge dev && git push --follow-tags && git checkout dev",
    "release:patch": "SEMVER=patch npm run release",
    "release:minor": "SEMVER=minor npm run release",
    "release:major": "SEMVER=major npm run release",
    "postinstall": "[ -d './dist' ] || npm run build"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "test",
    "lint-staged"
  ],
  "author": "Stefan Peters",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "axios": "^0.27.2",
    "clean-jsdoc-theme": "^4.1.8",
    "eslint": "^8.28.0",
    "eslint-config-gbv": "^1.0.3",
    "glob": "^8.0.3",
    "jsdoc": "^3.6.11",
    "lint-staged": "^12.5.0",
    "lodash": "^4.17.21",
    "mocha": "^9.2.2",
    "mocha-eslint": "^7.0.0",
    "pre-commit": "^1.2.2",
    "rollup": "^2.79.1",
    "rollup-plugin-license": "^2.9.1",
    "wikidata-sdk": "^8.0.0"
  }
}
